<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="style_name">@string/day_theme_name</item>
        <item name="android:textColor">@color/qmui_config_color_gray_1</item>
        <item name="android:textAppearanceListItemSmall">@style/QDTextAppearanceListItemSmall</item>
        <item name="android:textAppearanceListItem">@style/QDtextAppearanceListItem</item>
        <item name="android:listPreferredItemHeight">?attr/qmui_list_item_height_higher</item>
        <item name="android:listPreferredItemHeightSmall">?attr/qmui_list_item_height</item>

        <item name="android:navigationBarColor">?attr/app_primary_color</item>

        <item name="refresh_icon_color">?attr/button_edge_color</item>

        <item name="add_channel_button_mipmap">@mipmap/add_channel</item>
        <item name="add_channel_close_button_mipmap">@drawable/category_edit_close</item>
        <item name="switch_button_color">?attr/app_primary_color</item>
        <item name="switch_button_color_disabled">@color/qmui_config_color_blue_fade</item>

        <!-- QMUI stuffs -->
        <item name="qmui_config_color_blue">@color/app_color_blue</item>
        <item name="qmui_round_btn_bg_color">@color/s_btn_blue_bg</item>
        <item name="qmui_round_btn_border_color">@color/s_btn_blue_border</item>
        <item name="qmui_round_btn_text_color">@color/s_btn_blue_text</item>
        <item name="qmui_content_spacing_horizontal">20dp</item>
        <item name="qmui_content_padding_horizontal">@dimen/qmui_content_spacing_horizontal</item>

        <!-- styles for components -->
        <item name="QMUITopBarStyle">@style/QDTopBar</item>
        <item name="QMUICommonListItemViewStyle">@style/QDCommonListItemView</item>

        <!-- theme specific colors -->
        <item name="tabbar_normal_text_color">?android:textColor</item>
        <item name="tabbar_selected_text_color">@color/app_color_blue_pressed</item>
        <item name="app_primary_color">?attr/qmui_config_color_blue</item>
        <item name="app_primary_dim_color">?attr/tabbar_selected_text_color</item>

        <item name="app_background_color">@color/color_gray_f</item>
        <item name="app_background_selector">@drawable/selector_white</item>
        <item name="app_background_color_dark">@color/color_gray_e</item>

        <item name="app_background_dim_color">#eaeaea</item>

        <item name="qmui_config_color_background">?attr/app_background_color</item>
        <item name="background_text_color">@color/qmui_config_color_white</item>
        <item name="app_content_separator_color">@color/qmui_config_color_separator</item>
        <item name="button_edge_color">@color/color_e8e8e8</item>
        <item name="foreground_text_color">@color/qmui_config_color_black</item>
        <item name="webview_progress_bar_color">@color/app_color_theme_4</item>
        <item name="ic_search_color">#646464</item>
        <item name="foreground_text_color_dim">@color/qmui_config_color_gray_5</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="swipe_delete_background">@color/color_red_5</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:buttonStyleToggle">@style/button_style_toggle</item>

        <item name="clicked_text_color">@color/color_gray_a</item>

        <item name="news_detail_follow_btn_color">#2a90d8</item>
    </style>

    <style name="button_style" parent="android:Widget.Material.Light.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="button_style_toggle" parent="android:Widget.Material.Light.Button.Toggle">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="news_text_style">
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>

    <style name="news_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">?attr/app_primary_color</item>
        <item name="qmui_topbar_title_color">?attr/background_text_color</item>
        <item name="qmui_topbar_subtitle_color">?attr/background_text_color</item>
        <item name="qmui_topbar_text_btn_color_state_list">?attr/background_text_color</item>
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
        <item name="qmui_topbar_need_separator">false</item>
    </style>

    <style name="QDCommonListItemView" parent="QMUI.CommonListItemView">
        <item name="qmui_commonList_titleColor">?attr/foreground_text_color</item>
        <item name="qmui_commonList_detailColor">?attr/foreground_text_color_dim</item>
    </style>

    <style name="QDTextAppearanceListItemSmall">
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/qmui_config_color_background</item>
    </style>

    <style name="QDtextAppearanceListItem">
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/qmui_config_color_background</item>
    </style>

    <declare-styleable name="TipView">
        <attr name="tipBackgroundColor" format="color" />
        <attr name="tipTextColor" format="color" />
        <attr name="tipText" format="string" />
        <attr name="tipTextSize" format="dimension" />
    </declare-styleable>

    <style name="ToutiaoTheme" parent="AppTheme">
        <item name="style_name">@string/toutiao_theme_name</item>

        <item name="app_primary_color">#ed4040</item>
        <item name="webview_progress_bar_color">@color/app_color_theme_2</item>

        <item name="switch_button_color_disabled">#ba7575</item>

        <item name="tabbar_selected_text_color">#cd4040</item>

        <item name="news_detail_follow_btn_color">#eecc00</item>
    </style>

    <style name="JiujingTheme" parent="AppTheme">
        <item name="style_name">@string/jiujing_theme_name</item>
        <item name="app_primary_color">#5ba326</item>
        <item name="webview_progress_bar_color">@color/qmui_config_color_blue</item>

        <item name="switch_button_color_disabled">#abc995</item>

        <item name="tabbar_selected_text_color">#4b9326</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="style_name">@string/night_theme_name</item>
        <item name="android:textColor">@color/qmui_config_color_75_white</item>
        <item name="android:textAppearanceListItemSmall">@style/QDTextAppearanceListItemSmall</item>
        <item name="android:textAppearanceListItem">@style/QDtextAppearanceListItem</item>

        <item name="add_channel_button_mipmap">@mipmap/add_channel_dark</item>
        <item name="add_channel_close_button_mipmap">@drawable/category_edit_close_dark</item>

        <item name="app_primary_color">@color/color_gray_1</item>
        <item name="app_primary_dim_color">@color/color_gray_3</item>
        <item name="app_background_color">@color/color_gray_2</item>
        <item name="app_background_color_dark">@color/color_gray_3</item>
        <item name="app_background_selector">@drawable/selector_black</item>

        <item name="app_background_dim_color">@color/qmui_config_color_gray_3</item>

        <item name="switch_button_color">@color/qmui_config_color_blue</item>

        <item name="background_text_color">?android:textColor</item>
        <item name="foreground_text_color">@color/qmui_config_color_75_white</item>
        <item name="foreground_text_color_dim">@color/qmui_config_color_gray_8</item>
        <item name="button_edge_color">@color/qmui_config_color_blue</item>
        <item name="ic_search_color">@color/qmui_config_color_gray_8</item>
        <item name="app_content_separator_color">@color/qmui_config_color_gray_4</item>

        <item name="qmui_config_color_blue">?attr/app_primary_color</item>
        <item name="qmui_round_btn_bg_color">@color/qmui_config_color_gray_2</item>
        <item name="qmui_round_btn_border_color">@color/qmui_config_color_gray_2</item>
        <item name="qmui_round_btn_text_color">@color/qmui_config_color_gray_2</item>

        <item name="tabbar_normal_text_color">?android:textColor</item>
        <item name="qmui_s_list_item_bg_with_border_none">?attr/app_background_color</item>

        <item name="clicked_text_color">@color/color_gray_8</item>
    </style>

    <style name="dialogSlideAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <declare-styleable name="CircleProgressView">
        <attr name="cpv_progressNormalColor" format="color"/>
        <attr name="cpv_progressReachColor" format="color"/>
        <attr name="cpv_progressTextColor" format="color"/>
        <attr name="cpv_progressTextSize" format="dimension"/>
        <attr name="cpv_progressTextOffset" format="dimension"/>
        <attr name="cpv_progressNormalSize" format="dimension"/>
        <attr name="cpv_progressReachSize" format="dimension"/>
        <attr name="cpv_radius" format="dimension"/>
        <attr name="cpv_progressTextVisible" format="boolean"/>
        <attr name="cpv_progressStartArc" format="integer"/>
        <attr name="cpv_progressTextSkewX" format="dimension"/>
        <attr name="cpv_progressTextPrefix" format="string"/>
        <attr name="cpv_progressTextSuffix" format="string"/>
        <attr name="cpv_innerBackgroundColor" format="color"/>
        <attr name="cpv_progressStyle" format="enum">
            <enum name="Normal" value="0"/>
            <enum name="FillInner" value="1"/>
            <enum name="FillInnerArc" value="2"/>
        </attr>
        <attr name="cpv_innerProgressColor" format="color"/>
        <attr name="cpv_innerPadding" format="dimension"/>
        <attr name="cpv_outerColor" format="color"/>
        <attr name="cpv_outerSize" format="dimension"/>
        <attr name="cpv_reachCapRound" format="boolean"/>
    </declare-styleable>

</resources>
